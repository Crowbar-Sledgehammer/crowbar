#!/usr/bin/env python2

import signal

from gi.repository import Gtk

import dictview
import linkedpanes

GEOMETRY = list()
GEOMETRY.append(dict(x=(-33, 33), y=(-33, 33), z=(-33, 33)))

def main():

    if 'gtk':
        win = Gtk.Window()
        win.set_size_request(300, 200)
        win.connect("delete-event", Gtk.main_quit)

        if 'linkedpanes':
            _linkedpanes = linkedpanes.LinkedPanes(
                Gtk.Label('Viewport'), dictview.DictView(('z', 'y'), GEOMETRY),
                dictview.DictView(('x', 'z'), GEOMETRY), dictview.DictView(('x', 'y'), GEOMETRY),
            )
            win.add(_linkedpanes)

        win.show_all()
        signal.signal(signal.SIGINT, signal.SIG_DFL)
        Gtk.main()


if __name__ == '__main__':
    main()
